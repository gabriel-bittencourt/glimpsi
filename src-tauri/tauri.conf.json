{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "glimpsi",
  "version": "0.1.0",
  "identifier": "Glimpsi",
  "build": {
    "beforeDevCommand": "dx serve --port 1420",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "dx build --release",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "glimpsi",
        "width": 1000,
        "height": 600,
        "center": true,
        "alwaysOnTop": true,
        "transparent": true,
        "skipTaskbar": true,
        "decorations": false,
        "visible": false,
        "resizable": false,
        "fullscreen": false,
        "maximizable": false,
        "minimizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
